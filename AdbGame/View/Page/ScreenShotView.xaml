<Page
    x:Class="AdbGame.View.Page.ScreenShotView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:AdbGame.View.Page"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    Title="ScreenShotView"
    d:DesignHeight="450"
    d:DesignWidth="900"
    mc:Ignorable="d">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition Width="auto" />
        </Grid.ColumnDefinitions>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="auto" />
                <RowDefinition />
            </Grid.RowDefinitions>
            <WrapPanel>
                <ui:Button
                    Margin="20,10,10,10"
                    Appearance="Info"
                    Command="{Binding ConnectCommand}"
                    Content="连接MuMu" />
                <TextBox
                    Width="80"
                    Margin="10"
                    Text="{Binding Serial}" />
                <ui:Button
                    Margin="20,10,10,10"
                    Appearance="Info"
                    Command="{Binding ScreenShotCommand}"
                    Content="截图" />
            </WrapPanel>
            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition Width="120" />
                </Grid.ColumnDefinitions>
                <ScrollViewer Grid.Column="0" Height="560">
                    <Image
                        x:Name="imageControl"
                        Margin="10"
                        MouseLeftButtonDown="ImageControl_MouseMove"
                        Source="{Binding SrcImageSource}" />
                </ScrollViewer>
                <Image
                    Grid.Column="1"
                    Margin="10"
                    Source="{Binding DstImageSource}" />
            </Grid>
        </Grid>
        <Border
            Grid.Column="1"
            Width="380"
            Margin="20"
            BorderBrush="Orange"
            BorderThickness="2"
            CornerRadius="10">
            <Grid>
                <StackPanel>
                    <TextBlock
                        Margin="20"
                        VerticalAlignment="Center"
                        Text="模板位置" />
                    <WrapPanel Margin="20">
                        <TextBlock
                            Width="30"
                            Margin="10"
                            VerticalAlignment="Center"
                            Text="x：" />
                        <TextBox
                            Width="60"
                            Margin="10"
                            VerticalAlignment="Center"
                            Text="{Binding X}" />
                        <TextBlock
                            Width="30"
                            Margin="10"
                            VerticalAlignment="Center"
                            Text="y：" />
                        <TextBox
                            Width="60"
                            Margin="10"
                            VerticalAlignment="Center"
                            Text="{Binding Y}" />
                    </WrapPanel>
                    <WrapPanel Margin="20">
                        <TextBlock
                            Width="30"
                            Margin="10"
                            VerticalAlignment="Center"
                            Text="长：" />
                        <TextBox
                            Width="60"
                            Margin="10"
                            VerticalAlignment="Center"
                            Text="{Binding Width}" />
                        <TextBlock
                            Width="30"
                            Margin="10"
                            VerticalAlignment="Center"
                            Text="宽：" />
                        <TextBox
                            Width="60"
                            Margin="10"
                            VerticalAlignment="Center"
                            Text="{Binding Height}" />
                    </WrapPanel>
                    <WrapPanel Margin="20">
                        <ui:Button
                            Margin="0,10,10,10"
                            VerticalAlignment="Center"
                            Appearance="Info"
                            Command="{Binding SelectLocationCommand}"
                            Content="模板位置" />
                        <TextBox
                            Width="160"
                            Margin="0,10,10,10"
                            VerticalAlignment="Center"
                            Text="{Binding TemplateLocation}" />
                    </WrapPanel>
                    <WrapPanel Margin="20">
                        <TextBlock
                            Width="60"
                            Margin="10"
                            VerticalAlignment="Center"
                            Text="模板名称：" />
                        <TextBox
                            Width="160"
                            Margin="10"
                            VerticalAlignment="Center"
                            Text="{Binding TemplateName}" />
                    </WrapPanel>
                    <WrapPanel Margin="20">
                        <ui:Button
                            Margin="0 10 10 10"
                            Appearance="Info"
                            Command="{Binding ShowTemplateCommand}"
                            Content="微调模板" />
                        <ui:Button
                            Margin="10"
                            Appearance="Caution"
                            Command="{Binding SaveTemplateCommand}"
                            Content="保存模板" />
                    </WrapPanel>

                </StackPanel>
            </Grid>
        </Border>


    </Grid>
</Page>
