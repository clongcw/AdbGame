<UserControl
    x:Class="AdbGame.View.Page.MuMuView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:ext="clr-namespace:AdbGame.Extension"
    xmlns:hc="https://handyorg.github.io/handycontrol"
    xmlns:local="clr-namespace:AdbGame.View.Page"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:model="clr-namespace:AdbGame.Model"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <WrapPanel>
            <!--<TextBox
                Width="80"
                Margin="c"
                Text="{Binding Serial, Mode=TwoWay}" />-->
            <ui:Button
                Margin="20 10 10 10"
                Appearance="Info"
                Command="{Binding ConnectCommand}"
                Content="连接MuMu" />
            <ui:Button
                Margin="10"
                Appearance="Info"
                Command="{Binding StartCommand}"
                Content="开始任务" />
            <ui:Button
                Margin="10"
                Appearance="Caution"
                Command="{Binding StopCommand}"
                Content="完毕" />
        </WrapPanel>
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="auto" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Border
                Grid.Column="0"
                Width="120"
                Height="540"
                Margin="20"
                BorderBrush="LightBlue"
                BorderThickness="2"
                CornerRadius="10" >
                <ItemsControl Margin="20" ItemsSource="{Binding Gamemissions}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <WrapPanel>
                                <TextBlock VerticalAlignment="Center" Text="{Binding GameMissionName, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                                <CheckBox VerticalAlignment="Center" IsChecked="{Binding IsChecked, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                            </WrapPanel>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </Border>

            <Border
                Grid.Column="1"
                Height="540"
                Margin="20"
                BorderBrush="Orange"
                BorderThickness="2"
                CornerRadius="10">
                <hc:ScrollViewer
                    Grid.Row="1"
                    Margin="5"
                    ext:ScrollViewerExtensions.AlwaysScrollToEnd="True"
                    IsInertiaEnabled="True">
                    <ContentControl Margin="20">
                        <ItemsControl Background="Transparent" ItemsSource="{Binding Messages, Mode=TwoWay}">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <VirtualizingStackPanel
                                        VirtualizingPanel.CacheLength="2"
                                        VirtualizingPanel.CacheLengthUnit="Page"
                                        VirtualizingPanel.IsVirtualizingWhenGrouping="True"
                                        VirtualizingPanel.VirtualizationMode="Recycling" />
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                            <ItemsControl.Resources>
                                <DataTemplate DataType="{x:Type model:MessageData}">
                                    <Border Style="{StaticResource MessageBorder}">
                                        <WrapPanel Orientation="Horizontal">
                                            <TextBlock
                                                Margin="3"
                                                VerticalAlignment="Center"
                                                Style="{StaticResource MessageTextBlock}"
                                                Text="{Binding Time, StringFormat={}{0:yyyy-MM-dd HH:mm:ss}}" />
                                            <TextBlock
                                                Margin="5,0"
                                                VerticalAlignment="Center"
                                                Style="{StaticResource MessageTextBlock}"
                                                Text="{Binding Id}" />
                                            <TextBox
                                                VerticalAlignment="Center"
                                                FontSize="12"
                                                IsReadOnly="True"
                                                Style="{StaticResource MessageTextBox}"
                                                Text="{Binding Content}"
                                                TextWrapping="Wrap" />
                                        </WrapPanel>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.Resources>
                        </ItemsControl>
                    </ContentControl>
                </hc:ScrollViewer>
            </Border>
        </Grid>
    </Grid>
</UserControl>
